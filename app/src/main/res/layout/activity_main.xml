<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.adddata.MainActivity"
    android:orientation="vertical"
    >

    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/notesTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edtnotes"
        android:elevation="5dp"
        android:layout_marginHorizontal="10dp"
        android:hint="Enter Notes Title"
        android:padding="15dp"
        />
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/notesEdt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/edtnotes"
        android:elevation="5dp"
        android:inputType="textImeMultiLine"
        android:layout_marginHorizontal="10dp"
        android:gravity="top"
        android:hint="Enter Notes....................."
        android:padding="20dp"
        />
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Insert"
            android:textColor="@color/theme"
            android:fontFamily="@font/andada_bold"
            android:layout_marginTop="50dp"
            android:textSize="20dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/insertNotes"
            android:background="@drawable/btnback"
            />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Show"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/showNotes"
        android:textColor="@color/theme"
        android:fontFamily="@font/andada_bold"
        android:textSize="20dp"
        android:background="@drawable/btnback"
        android:layout_marginBottom="40dp"

        />
</LinearLayout>